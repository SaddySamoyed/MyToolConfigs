{
    // "workbench.colorTheme":"Monokai Pro (Filter Machine)", // 这个还不错, 浅绿
    //"workbench.colorTheme":"Visual Studio Dark - C++", // 这个也不错, 原色
    "workbench.colorTheme":"Atom One Dark", // atom, 稍微浅一点的深色
    //"workbench.colorTheme":"One Dark Theme", // 和 atom 看不出区别
    //"workbench.colorTheme":"Eva Dark", // 带点浅紫色, 比较柔和
    "workbench.iconTheme":"vs-seti",
    "[python]": {
        "editor.formatOnType": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++-13",
    "terminal.integrated.inheritEnv": false,
    "editor.accessibilitySupport": "on",
    "cmake.configureOnOpen": true,
    "workbench.editorAssociations": {
        "*.pdf": "pdf.preview"
    },
    "window.zoomLevel": 1,
    "git.openRepositoryInParentFolders": "never",
    "cmake.showOptionsMovedNotification": false,
    "extensions.ignoreRecommendations": true,
    "lldb.showDisassembly": "never",
    "files.autoSave": "afterDelay",
    "editor.stickyTabStops": true,
    "editor.autoIndent": "advanced",
    "editor.indentSize": "tabSize",

    //vim settings
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["<Shift>", "x"],
            "after": ["<Esc>"]
        },
        {
           "before": ["<S-x>", "<S-c>"], // <shift-x>+<shift-c> 进入 normal mode
            "after": ["<Esc>"]         
        }
    ],
    
    "vim.normalModeKeyBindingsNonRecursive": [
        {  
            "before": ["<Space>"],  // <Space> 进入 insert mode
            "after": ["i"]
        },
        {
            "before": ["<S-v>"],  // <Shift+v> 进入 visual mode
            "after": ["v"]
        },
        {
            "before": ["v"],
            "after": []  //禁用v
        },
        {  
            "before": ["i"], 
            "after": []  // 禁用i
        }, 
        {
            "before": ["a"],
            "after": ["b"] 
        },
        {
            "before": ["d"],
            "after": ["w"] 
        },
        {
            "before": ["w"],
            "after": ["k"] 
        }, 
        {
            "before": ["s"],
            "after": ["j"] 
        }, 
        {
            "before": ["l", "l"],  // 按下 'l' 两次
            "after": ["d", "d"]    // 映射到 'dd' 命令
        },
        {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
        },
        {
        "key": "ctrl+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
        },
        {
        "key": "ctrl+c",
        "command": "extension.vim_ctrl+c",
        "when": "!editorTextFocus"
        },
        {
        "key": "ctrl+v",
        "command": "extension.vim_ctrl+v",
        "when": "!editorTextFocus"
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<S-x>", "<S-c>"],  //<shift-x>+<shift-c> 进入normal mode
            "after": ["<Esc>"]
        },
        {
            "before": ["<backspace>"], // <backspace> 表示整段删除, 原本c的作用
            "after": ["c"]
        },
        {
            "before": ["c"], // 禁用 c
            "after": []
        },
        {
            "before": ["<Space>"], // <Space 进入 insert mode
            "after": ["I"]
        }
    ],  


    "vim.handleKeys": {
        

            "<C-a>": false,
            "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.default.cStandard": "c23",
    "C_Cpp.default.intelliSenseMode": "macos-gcc-arm64",
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include/**",
        "${workspaceFolder}/**",
        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/c++/v1",
        "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/14.0.0/include",
        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include",
        "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include",
        "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
    ],
    "vim.commandLineModeKeyBindingsNonRecursive": [
    ],
    "github.copilot.editor.enableAutoCompletions": true,
    "editor.fontSize": 13,
    "editor.accessibilityPageSize": 12,
    "diffEditor.maxComputationTime": 0,
    "typescript.tsserver.watchOptions": {
        

    },
    
    "latex-workshop.latex.tools": [
    {
        "name": "xelatex",
        "command": "xelatex",
        "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
        ]
    }
    ],
    "terminal.integrated.defaultProfile.osx": "fish",
    "terminal.integrated.profiles.osx": {
        "fish": {
        "path": "/opt/homebrew/bin/fish" // 如果你是 Apple Silicon (M1/M2/M3)
        // "path": "/usr/local/bin/fish" // 如果你是 Intel Mac
        }
    },
    "background.enabled": true,
    "background.panel": {
        "useFront": true,
        "images": ["file:///Users/fanqiulin/Documents/Photos/02.jpg"],
        "style": {
            "background-position": "center",
            "background-repeat": "no-repeat",
            "background-size": "auto",
            "opacity": 0.05
        },
        "interval": 0,
        "random": false
    },
    "background.sidebar": {
        "useFront": true,
        "style": {
            "background-position": "center",
            "background-repeat": "no-repeat",
            "background-size": "auto",
            "opacity": 0.05
        },
        "images": ["file:///Users/fanqiulin/Documents/Photos/02_5.jpg"],
        "interval": 0,
        "random": false
    },
    "background.editor": {
        "useFront": true,
        "style": {
            "content": "",
            "pointer-events": "none",
            "background-position": "center",
            "background-repeat": "no-repeat",
            "background-size": "cover",
            "opacity": 0.05
        },
        "images": ["file:///Users/fanqiulin/Documents/Photos/02_6.jpg"],
        "interval": 0,
        "random": false
    },
    //"workbench.colorCustomizations": {"editor.background": "#2E3440"}, // nord
    "terminal.integrated.fontSize": 13,
    "terminal.external.osxExec": "iTerm.app",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "cpp": true
    },
    "workbench.startupEditor": "none",
    "github.copilot.nextEditSuggestions.enabled": true,
